<Page
    x:Class="HX7_Robot.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HX7_Robot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- MainPage -->
    <StackPanel Background="Orange" Padding="50">
        <TextBlock TextWrapping="Wrap" Text="Socket" FontSize="42" FontWeight="ExtraBold" Foreground="White" />
        <TextBlock Text="IP" Padding="0 21 0 0" />
        <TextBox Name="BoxIP" Text="10.10.100.254" />
        <TextBlock Text="Port" Padding="0 21 0 0" />
        <TextBox Name="BoxPort" Text="8899" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Control" Width="120" Margin="0 21 7 0" Padding="10" Click="Control_Button_Click" />
            <Button Content="Command" Width="120" Margin="7 21 0 0" Padding="10" Click="Command_Button_Click"  />
        </StackPanel>
    </StackPanel>
</Page>

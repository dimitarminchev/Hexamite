<Page
    x:Class="HX7_Robot.ControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HX7_Robot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- ControlPage -->
    <StackPanel Background="Orange" Padding="50">
        <TextBlock TextWrapping="Wrap" Text="Control" FontSize="42" FontWeight="ExtraBold" Foreground="White" TextAlignment="Center" />
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
            <Slider x:Name="Left" Padding="25" Maximum="25" Minimum="-25" Value="0" ValueChanged="Left_Value_Changed" Height="300" Orientation="Vertical" />
            <Slider x:Name="Right" Padding="25" Maximum="25" Minimum="-25" Value="0" ValueChanged="Right_Value_Changed" Height="300" Orientation="Vertical" />
        </StackPanel>
        <Button Content="Stop" Margin="0 21 0 0" Padding="50 10" Click="Stop_Button_Click" HorizontalAlignment="Center" />
        <Button Content="Back" Margin="0 21 0 0" Padding="50 10" Click="Back_Button_Click" HorizontalAlignment="Center" />
    </StackPanel>
</Page>

<Page
    x:Class="HX7_Robot.CommandPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HX7_Robot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- CommandPage -->
    <StackPanel Background="Orange" Padding="50">
        <TextBlock TextWrapping="Wrap" Text="Command" FontSize="42" FontWeight="ExtraBold" Foreground="White" />
        <TextBlock Text="Send" Padding="0 21 0 0" />
        <TextBox Name="BoxSend" />
        <Button Content="Send" Margin="0 21 0 0" Padding="50 10" Click="Send_Button_Click" />
        <TextBlock Text="Receive" Padding="0 21 0 0" />
        <TextBox Name="BoxReceive" Height="240" TextWrapping="Wrap"  />
        <Button Content="Back" Margin="0 21 0 0" Padding="50 10" Click="Back_Button_Click" />
    </StackPanel>
</Page>

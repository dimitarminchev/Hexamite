<Window x:Class="HX7_Render.ScryptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HX7_Render"
        mc:Ignorable="d"
        Title="Scrypt" Height="440" Width="640" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Scrypt" />
        <TextBox Name="Scrypt" Height="300" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />
        <StackPanel  Orientation="Horizontal">
            <Button Content="Execute" Margin="0 10" Width="120" Padding="5" Click="Execute_Button_Click" />
            <Button Content="Exit" Margin="10 10" Width="120" Padding="5" Click="Exit_Button_Click" />
        </StackPanel>
    </StackPanel>
</Window>
